<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.resumemaker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResumeMaker">
        <activity android:name=".EndScreen" android:label="Success"/>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Achievements"
            android:label="@string/achievements" />
        <activity
            android:name=".WorkExperience"
            android:label="@string/workExperience" />
        <activity
            android:name=".Skills"
            android:label="@string/Skills" />
        <activity
            android:name=".EducationDetails"
            android:label="Education Details" />
        <activity
            android:name=".PersonalDetails"
            android:label="@string/personalDetails" />
        <activity
            android:name=".Preview"
            android:label="@string/preview" />
        <activity android:name=".MainActivity" android:label="@string/resume_maker"/>
    </application>

</manifest>